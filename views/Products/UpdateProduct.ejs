<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../layout/header') %>
    <div class="row match-height" style="margin-left: 300px; margin-top: 20px;">
        <div class="col-lg-6 col-md-12">
          <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
              <h4>Fill Out Your Details</h4>
            </div>
            <div class="card-block">
                <div class="card-body">
                  <form action="/Products/insertProducts" method="post" enctype="multipart/form-data" > 
                <!-- category -->
                <label for="exampleInputname" class="form-label">category Name</label>
                <select name="categoryId" id="">
                 <option value="">--select category--</option>
                 <% categoryData.map((v,i)=>{ %> 
                   <option value="<%= v.id %>" <% if (updatePro && updatePro.categoryId == v.id) { %> 
                    selected 
                  <% } %>
                    ><%= v.category %></option>
                   <% }) %>
               
                </select><br><br>
                <!-- sub-category -->
                <label for="exampleInputname" class="form-label">sub category Name</label>
                    
              
                <select name="SubCategoryId" id="">
                 <option value="">--select category--</option>
                 <% SubCategoryData.map((v,i)=>{ %> 
                   <option value="<%= v.id %>" <% if(updatePro.SubCategoryId==v.id){ %><%= 'selected' %><% } %> ><%= v.subCategory %></option>
                   <% }) %>
               
                </select>
                <!-- Extra-category -->
                <label for="exampleInputname" class="form-label">Extra category Name</label>
                <select name="ExtraCategoryId" id="">
                <option value="">--select category--</option>
                <% ExtraCategoryData.map((v,i)=>{ %> 
                  <option value="<%= v.id %>"><%= v.ExtraCategory %></option>
                  <% }) %>
              
                </select>
                <!-- type -->
                <label for="exampleInputname" class="form-label">Extra category Name</label>
                <select name="TypesCategoryId" id="">
           <option value="">--select category--</option>
           <% TypeCategoryData.map((v,i)=>{ %> 
             <option value="<%= v.id %>"><%= v.TypesCategory %></option>
             <% }) %>
         
           </select>
                <!-- brand -->
                <label for="exampleInputname" class="form-label">Extra  Brand</label>
                <select name="BrandCategoryId" id="">
           <option value="">--select category--</option>
           <% BrandData.map((v,i)=>{ %> 
             <option value="<%= v.id %>"><%= v.brand %></option>
             <% }) %>
         
           </select>
                <!-- title -->
                <h5 class="mt-3">Enter Title</h5>
                <fieldset class="form-group">
                  <input type="text" placeholder="Enter your title" name="title" class="form-control" />
                </fieldset>
                <!-- price -->
                <h5 class="mt-3">Enter Product Price</h5>
                <fieldset class="form-group">
                  <input type="text" placeholder="Enter Product price" name="price" class="form-control" />
                </fieldset>
                <!-- old price -->
                <h5 class="mt-3">Enter old price</h5>
                <fieldset class="form-group">
                  <input type="text" placeholder="Enter old-price" name="oldPrice" class="form-control" />
                </fieldset>
                <!-- description -->
                <h5 class="mt-3">Enter description</h5>
                <fieldset class="form-group">
                    <textarea name="description" id=""></textarea>
                  <!-- <input type="text" placeholder="Enter your Name" name="category" class="form-control" /> -->
                </fieldset>
                <!-- Image -->
                <h5 class="mt-3">Enter old price</h5>
                <fieldset class="form-group">
                  <input type="file" placeholder="Enter Image" name="Image" class="form-control" />
                </fieldset>


                <!-- Multiple-Image -->
                <!-- <h5 class="mt-3">Enter old price</h5>
                <fieldset class="form-group">
                  <input type="file" placeholder="Enter Multiple-Image" name="multipleImage" class="form-control" />
                </fieldset> -->


                <!-- Submit Button -->
                <fieldset class="form-group text-center">
                  <input type="submit" class="btn btn-success w-100 mt-4" />
                </fieldset>
            </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    
</body>
</html>