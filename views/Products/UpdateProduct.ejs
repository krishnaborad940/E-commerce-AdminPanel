<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .form-container {
            max-width: 800px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .form-label {
            font-weight: bold;
        }
        .form-control, select {
            margin-bottom: 15px;
        }
        .image-preview {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .image-preview img {
            height: 100px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <%- include('../layout/header') %>

    <div class="container">
        <div class="form-container">
            <h3 class="text-center text-primary">Update Product</h3>
            <form action="/Products/Editroducts" method="post" enctype="multipart/form-data">
                <input type="text" name="editid" value="<%= updatePro.id %>">

                <!-- Category Selection -->
                <div class="mb-3">
                    <label class="form-label">Category Name</label>
                    <select name="categoryId" class="form-control">
                        <option value="">-- Select Category --</option>
                        <% categoryData.map((v, i) => { %> 
                            <option value="<%= v.id %>" <% if (updatePro && updatePro.categoryId == v.id) { %> selected <% } %>>
                                <%= v.category %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Sub-category Selection -->
                <div class="mb-3">
                    <label class="form-label">Sub-category Name</label>
                    <select name="SubCategoryId" class="form-control">
                        <option value="">-- Select Sub-category --</option>
                        <% SubCategoryData.map((v, i) => { %> 
                            <option value="<%= v.id %>" <% if(updatePro && updatePro.SubCategoryId == v.id) { %> selected <% } %>>
                                <%= v.subCategory %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Extra-category Selection -->
                <div class="mb-3">
                    <label class="form-label">Extra Category Name</label>
                    <select name="ExtraCategoryId" class="form-control">
                        <option value="">-- Select Extra Category --</option>
                        <% ExtraCategoryData.map((v, i) => { %> 
                            <option value="<%= v.id %>" <% if(updatePro && updatePro.ExtraCategoryId == v.id) { %> selected <% } %>>
                                <%= v.ExtraCategory %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Type Selection -->
                <div class="mb-3">
                    <label class="form-label">Type Category</label>
                    <select name="TypesCategoryId" class="form-control">
                        <option value="">-- Select Type Category --</option>
                        <% TypeCategoryData.map((v, i) => { %> 
                            <option value="<%= v.id %>" <% if(updatePro && updatePro.TypesCategoryId == v.id) { %> selected <% } %>>
                                <%= v.TypesCategory %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Brand Selection -->
                <div class="mb-3">
                    <label class="form-label">Brand</label>
                    <select name="BrandCategoryId" class="form-control">
                        <option value="">-- Select Brand --</option>
                        <% BrandData.map((v, i) => { %> 
                            <option value="<%= v.id %>" <% if(updatePro && updatePro.BrandCategoryId == v.id) { %> selected <% } %>>
                                <%= v.brand %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Title -->
                <div class="mb-3">
                    <label class="form-label">Product Title</label>
                    <input type="text" name="title" class="form-control" placeholder="Enter your title" value="<%= updatePro ? updatePro.title : '' %>">
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label class="form-label">Product Price</label>
                    <input type="text" name="price" class="form-control" placeholder="Enter product price" value="<%= updatePro ? updatePro.price : '' %>">
                </div>

                <!-- Old Price -->
                <div class="mb-3">
                    <label class="form-label">Old Price</label>
                    <input type="text" name="oldPrice" class="form-control" placeholder="Enter old price" value="<%= updatePro ? updatePro.oldPrice : '' %>">
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label class="form-label">Product Description</label>
                    <textarea name="description" class="form-control" placeholder="Enter product description"><%= updatePro ? updatePro.description : '' %></textarea>
                </div>

                <!-- Image Upload -->
                <div class="mb-3">
                    <label class="form-label">Product Image</label>
                    <div class="image-preview">
                        <input type="file" name="Image" class="form-control">
                        <% if (updatePro && updatePro.Image) { %>
                            <img src="<%= updatePro.Image %>" alt="Product Image">
                        <% } %>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100 mt-3">Update Product</button>
                </div>

            </form>
        </div>
    </div>
</body>
</html>
