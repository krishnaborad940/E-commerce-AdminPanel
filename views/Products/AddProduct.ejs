<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .form-container {
            max-width: 700px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .form-label {
            font-weight: bold;
        }
        .form-control, select {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <%- include('../layout/header') %>
    <div class="container">
        <div class="form-container">
            <h3 class="text-center text-primary">Add Product Details</h3>
            <form action="/Products/insertProducts" method="post" enctype="multipart/form-data">
                <!-- Category -->
                <label class="form-label">Category</label>
                <select name="categoryId" class="form-control">
                    <option value="">-- Select Category --</option>
                    <% categoryData.map((v) => { %> 
                        <option value="<%= v.id %>"><%= v.category %></option>
                    <% }) %>
                </select>

                <!-- Sub-Category -->
                <label class="form-label">Sub Category</label>
                <select name="SubCategoryId" class="form-control">
                    <option value="">-- Select Sub Category --</option>
                    <% SubCategoryData.map((v) => { %> 
                        <option value="<%= v.id %>"><%= v.subCategory %></option>
                    <% }) %>
                </select>
                
                <!-- Extra Category -->
                <label class="form-label">Extra Category</label>
                <select name="ExtraCategoryId" class="form-control">
                    <option value="">-- Select Extra Category --</option>
                    <% ExtraCategoryData.map((v) => { %> 
                        <option value="<%= v.id %>"><%= v.ExtraCategory %></option>
                    <% }) %>
                </select>
                
                <!-- Type Category -->
                <label class="form-label">Type Category</label>
                <select name="TypesCategoryId" class="form-control">
                    <option value="">-- Select Type Category --</option>
                    <% TypeCategoryData.map((v) => { %> 
                        <option value="<%= v.id %>"><%= v.TypesCategory %></option>
                    <% }) %>
                </select>

                <!-- Brand -->
                <label class="form-label">Brand</label>
                <select name="BrandCategoryId" class="form-control">
                    <option value="">-- Select Brand --</option>
                    <% BrandData.map((v) => { %> 
                        <option value="<%= v.id %>"><%= v.brand %></option>
                    <% }) %>
                </select>
                
                <!-- Title -->
                <label class="form-label">Title</label>
                <input type="text" name="title" class="form-control" placeholder="Enter Title">

                <!-- Price -->
                <label class="form-label">Price</label>
                <input type="text" name="price" class="form-control" placeholder="Enter Price">

                <!-- Old Price -->
                <label class="form-label">Old Price</label>
                <input type="text" name="oldPrice" class="form-control" placeholder="Enter Old Price">

                <!-- Description -->
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="3" placeholder="Enter Description"></textarea>

                <!-- Image -->
                <label class="form-label">Upload Image</label>
                <input type="file" name="Image" class="form-control">
                
                <!-- Submit Button -->
                <button type="submit" class="btn btn-success w-100 mt-3">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
