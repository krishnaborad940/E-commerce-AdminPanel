<%- include('../layout/header') %>
<style>
    /* Container */
    .container {
        width: 90%;
        margin: auto;
    }
    
    /* Product Grid */
    .product-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }
    
    /* Product Card */
    .product-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 15px;
        width: 250px;
        text-align: center;
        border: 1px solid #ddd;
        transition: transform 0.3s ease-in-out;
    }
    
    .product-card:hover {
        transform: scale(1.05);
    }
    
    /* Product Image */
    .product-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }
    
    .no-image {
        color: gray;
        font-size: 14px;
    }
    
    /* Text Styling */
    h4 {
        font-size: 18px;
        color: #333;
    }
    
    h5.price {
        color: green;
        font-weight: bold;
    }
    
    p.old-price {
        color: red;
        font-size: 14px;
    }
    
    p {
        margin: 5px 0;
        color: #555;
    }
    
    /* Buttons */
    .product-actions {
        margin-top: 10px;
    }
    
    .product-actions .btn {
        margin: 5px;
        font-size: 14px;
        padding: 5px 10px;
    }/* Pagination Buttons */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    gap: 10px;
}

.pagination button {
    background: #007bff;
    color: white;
    border: none;
    padding: 8px 16px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.3s ease-in-out;
}

.pagination button:hover {
    background: #0056b3;
}

.pagination button:disabled {
    background: #ccc;
    cursor: not-allowed;
}

    </style>
    <div style="text-align:center;margin-top: 20px; display: flex; justify-content: center;align-items: center;">
        <form action="">
            <input type="text" name="productSerach" value="<%= serach %>" placeholder="search">
             <input type="submit" value="submit" class="btn btn-success">
        </form>
        <a href="/Products/ViewProduct" style="margin-left: 10px;margin-top: -10px;" class="btn btn-danger">reset</a>
         </div>
<div class="container">
    <h2 class="text-center text-primary mt-4">Product List</h2>
    <div class="product-container">
        <% viewProductData.map((v, i) => { %>
            <div class="product-card">
                    <img src="<%= v.Image %>" alt="Product Image" class="product-image">
                <h4>Title:<%= v.title %></h4>
                <p><strong>Category:</strong> <%= v.categoryId.category %></p>
                <p><strong>Sub-Category:</strong> <%= v.SubCategoryId.subCategory %></p>
                <p><strong>Extra-Category:</strong> <%= v.ExtraCategoryId.ExtraCategory %></p>
                <p><strong>Type:</strong> <%= v.TypesCategoryId.TypesCategory %></p>
                <p><strong>Brand:</strong> <%= v.BrandCategoryId.brand %></p>
                <p class="description">description:<%= v.description.substr(0,20) %></p>
                <h5 class="price">Price:₹<%= v.price %></h5>
                <p class="old-price">old-price:<del>₹<%= v.oldPrice %></del></p>
                <div class="product-actions">
                    <a href="/Products/UpdateProduct/<%= v.id %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Products/deleteProduct/?delId=<%= v.id %>" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        <% }) %> </div>

        

             
        <div class="pagination" style="margin: 30px 0;">
            <% if (parseInt(page) > 0) { %>  
                <a href="/Products/ViewProduct?page=<%= parseInt(page)-1 %>">
                    <button>Prev</button>
                </a>
            <% } else { %>
                <button disabled>Prev</button>
            <% } %>
        
            <span>Page <%= parseInt(page) + 1 %></span>
        
            <% if (parseInt(page) < totalData - 1) { %>  
                <a href="/Products/ViewProduct?page=<%= parseInt(page)+1 %>">
                    <button>Next</button>
                </a>
            <% } else { %>
                <button disabled>Next</button>
            <% } %>
        </div>
        
           
    
       
   


    
</div>


