      <style>
        /* General Styling */
body {
  font-family: 'Arial', sans-serif;
  background-color: #f8f9fa;
  margin: 0;
  padding: 0;
}

.card {
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  border: none;
  margin-left: 500px;
  width: 100%;
  margin-top: 20px;
}

.card-header {
  padding: 15px;
  background-color: #007bff;
  color: #fff;
  font-weight: bold;
  font-size: 1.2rem;
}

.card-body {
  padding: 20px;
}

fieldset {
  margin-bottom: 15px;
}

input[type="text"],
input[type="email"],
input[type="password"],
select,
button {
  border-radius: 5px;
  padding: 10px 15px;
  font-size: 16px;
  border: 1px solid #ced4da;
}

input:focus,
select:focus {
  outline: none;
  border-color: #007bff;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
}

button {
  background-color: #28a745;
  color: white;
  font-size: 1rem;
  border: none;
  cursor: pointer;
}

button:hover {
  background-color: #218838;
}

.d-flex {
  display: flex;
  gap: 10px;
}

.flex-wrap {
  flex-wrap: wrap;
}

.gap-3 {
  gap: 15px;
}

.w-100 {
  width: 100%;
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
  .card {
    margin: 10px;
  }
}

      </style>
<body>
    <%- include('./layout/header') %>
    <div class="row match-height">
        <div class="col-lg-6 col-md-12">
          <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
              <h4>Fill Out Your Details</h4>
            </div>
            <div class="card-block">
                <div class="card-body">
                  <form action="/insertAdmin" method="post" enctype="multipart/form-data"> 
                <!-- Name -->
                <h5 class="mt-3">Enter Your Name</h5>
                <fieldset class="form-group">
                  <input type="text" placeholder="Enter your Name" name="name" class="form-control" />
                </fieldset>
                <!-- Email -->
                <h5 class="mt-3">Enter Your Email</h5>
                <fieldset class="form-group">
                  <input type="email" placeholder="Enter your Email" name="email" class="form-control" />
                </fieldset>
                <!-- Password -->
                <h5 class="mt-3">Enter Your Password</h5>
                <fieldset class="form-group">
                  <input type="password" placeholder="Enter your Password" name="password" class="form-control" />
                </fieldset>
                <!-- Gender -->
                <h5 class="mt-3">Select Your Gender</h5>
                <fieldset class="form-group d-flex gap-3">
                  <div>
                    <input type="radio" name="gender" value="Male" id="male" />
                    <label for="male">Male</label>
                  </div>
                  <div>
                    <input type="radio" name="gender" value="Female" id="female" />
                    <label for="female">Female</label>
                  </div>
                </fieldset>
                <!-- Hobby -->
                <h5 class="mt-3">Select Your Hobby</h5>
                <fieldset class="form-group d-flex flex-wrap gap-3">
                  <div>
                    <input type="checkbox" name="hobby" value="Reading" id="reading" />
                    <label for="reading">Reading</label>
                  </div>
                  <div>
                    <input type="checkbox" name="hobby" value="Traveling" id="traveling" />
                    <label for="traveling">Traveling</label>
                  </div>
                  <div>
                    <input type="checkbox" name="hobby" value="Dancing" id="dancing" />
                    <label for="dancing">Dancing</label>
                  </div>
                  <div>
                    <input type="checkbox" name="hobby" value="Coding" id="coding" />
                    <label for="coding">Coding</label>
                  </div>
                </fieldset>
                <!-- City -->
                <h5 class="mt-3">Select Your City</h5>
                <fieldset class="form-group">
                  <% const cities = ['Surat', 'Baroda', 'Ahmedabad', 'Rajkot', 'Mumbai', 'Vadodara']; %>
                  <select name="cityName" class="form-control">
                    <option value="">-- Select City --</option>
                    <% cities.map((v) => { %>
                      <option value="<%= v %>"><%= v %></option>
                    <% }); %>
                  </select>
                </fieldset>
                <!-- Image -->
                <h5 class="mt-3">Upload Your Image</h5>
                <fieldset class="form-group">
                  <input class="form-control" type="file" name="Image" />
                </fieldset>
                <!-- Submit Button -->
                <fieldset class="form-group text-center">
                  <input type="submit" class="btn btn-success w-100 mt-4" />
                </fieldset>
            </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      
</body>
